{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
}
